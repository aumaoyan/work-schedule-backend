generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Employee {
  id       Int     @id @default(autoincrement())
  name     String
  role     String
  shifts   Shift[]
}

model Shift {
  id          Int      @id @default(autoincrement())
  startTime   DateTime
  endTime     DateTime
  employee    Employee @relation(fields: [employeeId], references: [id])
  employeeId  Int
}

